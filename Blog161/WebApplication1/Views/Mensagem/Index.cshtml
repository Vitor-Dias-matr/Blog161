@model IEnumerable<Blog161.Models.Mensagem>

@{
    ViewData["Title"] = "Mensagens";
}

<h1>Mensagem</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>

@foreach (var item in Model)
{
    <tr>
        <td>
            <h1>@Html.DisplayFor(modelItem => item.Titulo)</h1>
        </td>
        <td>
            <div class="card-body">
                <h5>Descrição:</h5><p> "@Html.DisplayFor(modelItem => item.Descricao)"</p>
                <h5 class="card-title">Comentários</h5>
                <div class="row">
                    @foreach (var comentario in item.Comentario)
                    {
                        @if (comentario.MensagemId == item.MensagemId)
                        {
                            <div class="col-sm-6">
                                <div class="card mb-2">
                                    <div class="card-body">
                                        <h5 class="card-title">@comentario.Titulo</h5>
                                        <p class="card-text">@comentario.Descricao</p>
                                        <span class="blockquote-footer float-left">@comentario.Autor - @comentario.DataComentario</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <a asp-action="Create" asp-controller="Comentario" class="btn btn-outline-primary float-right">Comentar</a>
                <a asp-action="Edit" asp-controller="Mensagem" asp-route-id="@item.MensagemId" class="btn btn-outline-warning float-right">Edit</a>
                <a asp-action="Delete" asp-controller="Mensagem" asp-route-id="@item.MensagemId" class="btn btn-outline-danger float-right">Delete</a>
            </div>
        </td>

    </tr>
}